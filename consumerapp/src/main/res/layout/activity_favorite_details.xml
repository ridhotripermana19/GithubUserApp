<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/colorPrimary"
    tools:context=".view.favorite.FavoriteDetails">
    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/img_fav_detail"
        android:layout_width="200dp"
        android:layout_height="200dp"
        tools:src="@drawable/dicoding"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="32dp"
        android:contentDescription="@string/imageFav" />
    <TextView
        android:id="@+id/user_fav_detail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="@string/user_name"
        android:layout_below="@id/img_fav_detail"
        android:textSize="28sp"
        android:textColor="@android:color/white"
        android:textStyle="bold"
        android:layout_marginTop="16dp"
        android:layout_centerHorizontal="true" />

    <androidx.cardview.widget.CardView
        android:id="@+id/card_view_name_detail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/user_fav_detail"
        android:backgroundTint="@android:color/transparent"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="16dp"
        app:cardCornerRadius="8dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_margin="8dp">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="@string/txt_full_name"
                android:textColor="@android:color/white"
                android:textSize="22sp"
                android:textStyle="bold" />
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="3dp"
                android:background="@color/gray"
                android:layout_marginTop="5dp"
                android:contentDescription="@string/divider"/>
            <TextView
                android:id="@+id/tv_fav_name_detail"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                tools:text="@string/txt_full_name"
                android:textColor="@android:color/white"
                android:textSize="20sp"
                android:paddingTop="10dp"/>
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/card_view_location_detail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/card_view_name_detail"
        android:backgroundTint="@android:color/transparent"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="16dp"
        app:cardCornerRadius="8dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_margin="8dp">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="@string/txt_user_location"
                android:textColor="@android:color/white"
                android:textSize="22sp"
                android:textStyle="bold" />
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="3dp"
                android:background="@color/gray"
                android:layout_marginTop="5dp"
                android:contentDescription="@string/divider"/>
            <TextView
                android:id="@+id/tv_fav_location_detail"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                tools:text="@string/txt_user_location"
                android:textColor="@android:color/white"
                android:textSize="20sp"
                android:paddingTop="10dp"/>
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/card_view_company_detail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/card_view_location_detail"
        android:backgroundTint="@android:color/transparent"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="16dp"
        app:cardCornerRadius="8dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_margin="8dp">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="@string/txt_user_company"
                android:textColor="@android:color/white"
                android:textSize="22sp"
                android:textStyle="bold" />
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="3dp"
                android:background="@color/gray"
                android:layout_marginTop="5dp"
                android:contentDescription="@string/divider"/>
            <TextView
                android:id="@+id/tv_fav_company_detail"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                tools:text="@string/txt_user_company"
                android:textColor="@android:color/white"
                android:textSize="20sp"
                android:paddingTop="10dp"/>
        </LinearLayout>
    </androidx.cardview.widget.CardView>
</RelativeLayout>